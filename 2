#include <iostream>
 const int Max = 100;
 using namespace std;
 
 int nhap(int a[], int n){
 	for(int i=0; i<n; i++){
 		cout<<"Nhap vao a["<<i<<"]= ";
 		cin>>a[i];
	 }
 }
 
 int xuat(int a[],  int n){
 	cout<<"Vay mang la: ";
 	for(int i=0; i<n; i++){
 		cout<<a[i]<<" ";
	 }
 }
 
 int tim_kiem_tuyen_tinh(int a[],int n, int x){
 	for(int i=0; i<n; i++){
 		if(a[i]==x){
 			return i;
		 }	
		else
			return -1;
	 }
 }
 
 int main(){
 	int n; cout<<"Nhap n: "; cin>>n;
 	int a[Max];
 	
 	nhap(a,n); xuat(a,n);
 	
 	int x; cout<<"\nNhap x: "; cin>>x;
 	
 	int ket_qua = tim_kiem_tuyen_tinh(a,n,x);
 	
 	if(ket_qua == -1){
		cout<<"\nKhong tim thay"<<endl;
	 }else{
		cout<<"Phan tu co trong mang tai vi tri: "<<ket_qua<<endl; 
	}
		
	return 0;
 }
