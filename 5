#include <iostream>
 const int Max = 100;
 using namespace std;
 
 int nhap(int a[], int n){
 	for(int i=0; i<n; i++){
 		cout<<"Nhap vao a["<<i<<"]= ";
 		cin>>a[i];
	 }
 }
 
 int xuat(int a[],  int n){
 	cout<<"Vay mang la: ";
 	for(int i=0; i<n; i++){
 		cout<<a[i]<<" ";
	 }
 }
 
 void chen_truc_tiep(int a[], int n){
 	for(int i =1; i<n;i++){
 		int x = a[i]; int pos = i - 1;;
 		while((pos>=0) && (a[pos]>x)){
 			a[pos+1]=a[pos]; 
			pos--;
		 }
		 a[pos+1]=x;
	 }
 }
 
 int main(){
 	int n; cout<<"Nhap n: "; cin>>n;
 	int a[Max];
 	
 	nhap(a,n);
 	xuat(a,n);
 	
 	chen_truc_tiep(a,n);
 	cout<<endl;
 	xuat(a,n);
 	
 	return 0;
 	
 }
